<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yhz.senbeiforummain.mapper.OrderInfoMapper">

    <resultMap id="BaseResultMap" type="com.yhz.senbeiforummain.model.entity.OrderInfo">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="orderNo" column="order_no" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="productId" column="product_id" jdbcType="BIGINT"/>
        <result property="totalFee" column="total_fee" jdbcType="INTEGER"/>
        <result property="orderStatus" column="order_status" jdbcType="INTEGER"/>
        <result property="paymentType" column="payment_type" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,order_no,user_id,
        product_id,total_fee,order_status,
        payment_type,create_time,create_by,
        update_time,update_by,is_deleted,
        version
    </sql>
    <insert id="createOrder" keyProperty="id">
        INSERT INTO order_info(`user_id`, `order_no`, `product_id`, `total_fee`, `order_status`, `payment_type`,`create_time`,`update_time`)
            VALUE (#{userId},#{orderNo},#{product.id},#{product.price},2,#{paymentType},now(),now())
    </insert>
</mapper>
