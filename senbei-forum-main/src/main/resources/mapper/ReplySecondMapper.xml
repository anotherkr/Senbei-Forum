<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yhz.senbeiforummain.mapper.ReplySecondMapper">

    <resultMap id="BaseResultMap" type="com.yhz.senbeiforummain.domain.ReplySecond">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="topicReplyId" column="topic_reply_id" jdbcType="BIGINT"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="supportNum" column="support_num" jdbcType="INTEGER"/>
            <result property="unsupportNum" column="unsupport_num" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
            <result property="isDeleted" column="is_deleted" jdbcType="INTEGER"/>
            <result property="version" column="version" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,model_topic_reply_id,content,
        user_id,support_num,unsupport_num,
        create_time,create_by,update_time,
        update_by,is_deleted,version
    </sql>
    <resultMap id="ReplySecondVoResultMap" type="replySecondVo">
        <id column="id" property="id"></id>
        <result property="content" column="content"></result>
        <result property="supportNum" column="support_num"></result>
        <result property="unsupportNum" column="unsupport_num"></result>
        <result property="createTime" column="create_time"></result>
        <association property="userInfoVo" select="com.yhz.senbeiforummain.mapper.UserMapper.getUserInfoVoById"
                     column="user_id"></association>
    </resultMap>
    <select id="getReplySecondVoListByTopicReplyId" resultMap="ReplySecondVoResultMap">
        SELECT  id,content,
                user_id,support_num,unsupport_num,
                create_time
        FROM reply_second
        WHERE topic_reply_id=#{topicReplyId}
        ORDER BY create_time ASC
    </select>

</mapper>
